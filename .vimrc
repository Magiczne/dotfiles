" Syntax highlighting
syntax on

" Line numbering
set number

" Search
set incsearch
set smartcase

" Indentation
set autoindent
set expandtab                   " Spaces instead of tabs
set tabstop=2
set shiftwidth=2

" Interface
set ls=2                        " Status line
set mouse=a
set showcmd
set showmode

" Filetype plugins
filetype on
filetype plugin on
filetype indent on

" Wildmenu
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
